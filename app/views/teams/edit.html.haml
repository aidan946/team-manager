%h1.text-xl
  Edit
  =@team.name
.hero.min-h-full.w-full.flex
  .mx-auto
    .card.w-full.max-w-sm.shadow-2xl.bg-base-200
      = form_for @team, class: 'card-body' do
        .form-control
          %label.label
            %span.label-text Team Name
          = text_field_tag :name, @team.name, class: 'input input-bordered', :placeholder => "name", :required => "", :type => "text"
        .form-control
          %label.label
            %span.label-text Team Description
          = text_field_tag :description, @team.description, class: 'input input-bordered', :placeholder => "description", :required => "", :type => "text"
        .form-control.mt-6
          = submit_tag "Update Team", class: "btn btn-primary"
          %a.btn.btn-secondary.mt-4{href: teams_path} Go Back
