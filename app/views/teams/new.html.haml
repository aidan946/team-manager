%h1.text-xl Create a Team
.hero.min-h-full.w-full.flex
  .mx-auto
    .card.w-full.max-w-sm.shadow-2xl.bg-base-200.w-96
      = form_tag teams_path, class: 'card-body' do
        .form-control
          %label.label
            %span.label-text Team Name
          = text_field_tag :name, params[:name], class: 'input input-bordered', :placeholder => "name", :required => "", :type => "text"
        .form-control
          %label.label
            %span.label-text Team Description
          = text_field_tag :description, params[:description], class: 'input input-bordered', :placeholder => "description", :required => "", :type => "text"
        .form-control.mt-6
          = submit_tag "Create Team", class: "btn btn-primary"
          %a.btn.btn-secondary.mt-4{href: teams_path} Go Back
