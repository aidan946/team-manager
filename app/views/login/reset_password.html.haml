.hero.min-h-screen.bg-base-200
  .hero-content.flex-col.lg:flex-row-reverse
    .card.shrink-0.w-full.max-w-sm.shadow-2xl.bg-base-100
      = form_tag reset_password_path, class: 'card-body' do
        %h3.text-2xl.font-bold.mb-6 Rest Password
        %p Enter your email for your account, and a link to reset your password will be sent.
        .form-control
          %label.label
            %span.label-text Email
          = text_field_tag :email, params[:email], class: 'input input-bordered', :placeholder => "email", :required => "", :type => "email"
        .form-control.mt-6
          = submit_tag "Send Email", class: "btn btn-primary"
          %a.btn.btn-secondary.mt-4{href: "/"} Go Back
