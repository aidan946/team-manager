.hero.min-h-screen.bg-base-200
  .hero-content.flex-col.lg:flex-row-reverse
    .text-center.lg:text-left
      %h1.text-5xl.font-bold Login now!
      %p.py-6 Sign or register an account to get started managing your team!
    .card.shrink-0.w-full.max-w-sm.shadow-2xl.bg-base-100
      = form_tag login_path, class: 'card-body' do
        .form-control
          %label.label
            %span.label-text Email
          = text_field_tag :email, params[:email], class: 'input input-bordered', :placeholder => "email", :required => "", :type => "email"
        .form-control
          %label.label
            %span.label-text Password
          = password_field_tag :password, params[:password], class: 'input input-bordered', :placeholder => "password", :required => "", :type => "password"
          %label.label
            %a.label-text-alt.link.link-hover{:href => "/reset_password"} Forgot password?
        .form-control.mt-6
          = submit_tag "Login", class: "btn btn-primary"
          %a.btn.btn-secondary.mt-4{:href => "/register"} Register
